#
# /etc/network/interfaces
#
# Generated by Chef for <%= node[:fqdn] %>
#

# Include files from /etc/network/interfaces.d
source-directory /etc/network/interfaces.d

# loopback network interface
auto lo
iface lo inet loopback

# Management network interface
auto <%= node[:nsm][:interfaces][:mgmt][:interface] %>
iface <%= node[:nsm][:interfaces][:mgmt][:interface] %> inet static
  address <%= node[:nsm][:interfaces][:mgmt][:ipv4] %>
  gateway <%= node[:nsm][:interfaces][:mgmt][:gateway] %>
  netmask <%= node[:nsm][:interfaces][:mgmt][:netmask] %>
  dns-nameservers <%= node[:nsm][:interfaces][:mgmt][:nameserver] %>
  dns-domain <%= node[:nsm][:interfaces][:mgmt][:domain] %>

