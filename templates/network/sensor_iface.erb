#
# /etc/network/interfaces.d/<%= @sensor[:interface] %>
#
# Generated by Chef for <%= node[:fqdn] %>
#

auto <%= @sensor[:interface] %>
iface <%= @sensor[:interface] %> inet manual
  up ip link set $IFACE promisc on arp off up
  down ip link set $IFACE promisc off down
  post-up ethtool -G $IFACE rx <%= node[:network][:interfaces][@sensor[:interface]][:ring_params][:max_rx] %>; for i in <%= @sensor[:nic_offloading] %>; do ethtool -K $IFACE $i off; done
  post-up echo 1 > /proc/sys/net/ipv6/conf/$IFACE/disable_ipv6
  mtu <%= @sensor[:mtu] %>
