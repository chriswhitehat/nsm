########################
# Zeek base streams
########################

event zeek_init()
    {
	
	<% if @local_zkg[:disable] %>
		<% @local_zkg[:disable].each do |stream, disabled| %>
			<% if disabled %>
	<%= "Log::disable_stream(#{stream});" %>
			<% else %>
	<%= "\#\#Log::disable_stream(#{stream});" %>
			<% end %>
		<% end %>
	<% end %>
    }
